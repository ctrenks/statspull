# Database (Neon PostgreSQL via Vercel)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# NextAuth
AUTH_SECRET="your-auth-secret-here-generate-with-openssl-rand-base64-32"
AUTH_URL="http://localhost:3000"

# Resend (Email)
RESEND_API_KEY="re_your_resend_api_key"

# App URL (for production)
NEXT_PUBLIC_APP_URL="https://statsfetch.com"

# PayPal Configuration
# Set PAYPAL_MODE to "sandbox" for testing, "live" for production
PAYPAL_MODE="live"
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-paypal-webhook-id"

# PayPal Plan IDs (create these in PayPal Dashboard)
PAYPAL_MONTHLY_PLAN_ID="P-your-monthly-plan-id"
PAYPAL_YEARLY_PLAN_ID="P-your-yearly-plan-id"

# Public PayPal config (exposed to client)
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"
NEXT_PUBLIC_PAYPAL_MONTHLY_PLAN_ID="P-your-monthly-plan-id"
NEXT_PUBLIC_PAYPAL_YEARLY_PLAN_ID="P-your-yearly-plan-id"
