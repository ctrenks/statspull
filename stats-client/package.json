{
  "name": "affiliate-stats-client",
  "version": "1.0.9",
  "description": "Affiliate Stats Manager - Local client for managing affiliate program statistics",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "AFC Media",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "sql.js": "^1.10.3",
    "electron-updater": "^6.1.7",
    "puppeteer-core": "^21.0.0"
  },
  "build": {
    "appId": "com.afcmedia.stats-client",
    "productName": "Affiliate Stats Manager",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": [
      {
        "provider": "generic",
        "url": "https://allmediamatter.com/downloads/stats-client/"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "forceCodeSigning": false,
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
